    position absolute
    overflow auto
    -webkit-overflow-scrolling touch
    z-index 1000
    pointer-events none
    &.am-drawer-open 
        pointer-events auto
    .am-drawer-sidebar
        position absolute
        top 0
        bottom 0
        right 0
        z-index 1002
        width 64vw
        height 100vh
        transform translateX(100%)
        background color-primary-bg
        transition all 0.5s ease
        overflow auto
        -webkit-overflow-scrolling touch
        box-shadow 1px 1px 2px rgba(0,0,0,.15)
    .am-drawer-overlay
        z-index 1001
        position absolute
        top 0
        bottom 0
        left 0 
        right 0
        opacity 0
        background-color rgba(0, 0, 0, 0.4)
