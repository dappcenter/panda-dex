.info-filter
    padding 4vw
    h5
        font-size 4vw
        color #A6ABBF
        padding-bottom 3.5vw
        border-bottom 1px solid #323F4D
    p
        padding 3vw 0 2vw
        color #52647A
        font-size 3.5vw
    a
        display flex
        align-items center
        justify-content center
        padding 1vw 0
        border-radius 3px
        border 1px solid #3B4657
        color #A6ABBF
        font-size 3.2vw
        margin-bottom 3vw
        &.active
            border 1px solid #238FF4
            background #238FF4
            color #fff
    img 
        height 4.3vw
        margin-right 2.7vw

.info-chat-box
    background #24303D
    height 100vh
    display flex
    flex-direction column
    h5
        text-align center
        background #232C38
        color #DFE0E7
        padding .1rem 0
        font-size .14rem
        position relative
        border-bottom 1px solid #323F4D
        a
            position absolute
            display block
            left 0
            top 0
            cursor pointer
            padding .1rem .2rem
            img 
                width 2vw
    ul.board
        flex 1
        list-style none
        height 3rem
        overflow auto
        padding .2rem
        text-align center
        border-bottom 1px solid rgba(204, 194, 242, .1)
        li
            padding .05rem 0
            .time
                display inline-block
                color #9095A9
                font-size .12rem
                padding 0 .2rem
                border-radius 4px
            &.sys
                p
                    margin .1rem 0 .05rem
                    display inline-block
                    color #9095A9
                    font-size .12rem
                    padding 0 .4rem
                    border-radius 4px
            &.opposite
                .detail
                    padding .1rem 0
                    display flex
                    align-items flex-start
                    justify-content flex-start
                    text-align left
                    .mes
                        background #5C7189
                        margin-left .15rem
                        padding .04rem .1rem
                        border-radius 3px
                        position relative
                        color #DFE0E7
                        max-width 60%
                        word-break break-all
                        &::before
                            content ''
                            position absolute
                            display block
                            left -13px
                            top 7px
                            width 0
                            height 0
                            border-left 7px solid transparent
                            border-bottom 7px solid transparent
                            border-top 7px solid transparent
                            border-right 9px solid #5C7189
                        .stime
                            position absolute
                            left: 0
                            bottom: -.18rem
                            font-size .12rem
                            color #99acd3
            &.self
                .detail
                    padding .1rem 0
                    display flex
                    align-items flex-start
                    justify-content flex-end
                    text-align right
                    .mes
                        background #5C7189
                        margin-right .15rem
                        padding .04rem .1rem
                        border-radius 3px
                        position relative
                        color #DFE0E7
                        max-width 60%
                        word-break break-all
                        &::after
                            content ''
                            position absolute
                            display block
                            right -13px
                            top 7px
                            width 0
                            height 0
                            border-right 7px solid transparent
                            border-bottom 7px solid transparent
                            border-top 7px solid transparent
                            border-left 9px solid #5C7189
                        .stime
                            position absolute
                            right: 0
                            bottom: -.18rem
                            font-size .12rem
                            color #99acd3
    textarea
        background #324151
        width 100%
        height 9.1vw
        border 0
        outline none 
        resize none
        padding 1vw 3vw
        color #DFE0E7
        font-size 3.6vw
    .chat-submit
        display flex
        align-items center
        padding 2vw 2.7vw
        .btn
            display flex
            align-items center
            justify-content center
            margin-left 2.7vw
            width 16vw
            height 9.1vw
            background #0D9BFF
            color #FFFFFF
            font-size 4vw
            border-radius 3px
    &.disable
        textarea
            background #334353
            &::placeholder
                color #99acd3
                font-size 3.2vw
        .btns
            background #344452
            .btn
                background #d1d6e1


