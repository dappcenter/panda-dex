.otc-h5
    .ope-top
        padding 2.9vw 4vw
        display flex
        align-items center
        justify-content space-between
        background #24303D
        a
            color #7396DE
            font-size 3.5vw
        div a
            display inline-flex
            align-items center
            justify-content center
            border 1px solid #323F4D
            border-radius .5vw
            margin-right 2.7vw
            width 16.5vw
            height 7.5vw
            color #DFE0E7
            font-size 3.5vw
    .otc-list
        margin 3px
        box-sizing border-box
        border 1px solid #323F4D
        border-radius .8vw
        background #1E2834
    .amount
        display block
        color #A6ABBF
        font-size 3.2vw
        padding 3vw 3.9vw 0
        a 
            color #7396DE
            text-decoration none
    .coins
        list-style none
        display flex
        align-items center
        border-bottom 1px solid rgba(72, 82, 124, 0.1)
        li
            padding 3.5vw 0
            margin 0 3.9vw
            position relative
            a 
                color #52647A
                font-size 3.7vw
            &.active a
                color #DFE0E7
                &::after
                    content ''
                    position absolute
                    bottom 0
                    display block
                    width 100%
                    height .5vw
                    border-radius .5vw .5vw 0 0
                    background #FFAC59
    .orders
        padding 2.7vw 0
        li
            margin-bottom 2.7vw
            border-radius .5vw
            background #222d3a
            padding 2.9vw 3.5vw
            color #6B7F98
            .order-head
                display flex
                align-items center
                justify-content space-between
                border-bottom 1px solid rgba(72, 82, 124, 0.4)
                padding-bottom 2.9vw
                font-size 3.5vw
            .order-content
                display flex
                align-items center
                padding 3.9vw 0 5.9vw
                > div
                    flex 1
                    display flex
                    flex-direction column
                    &:nth-child(2)
                        text-align right
                        flex 2
                    &:nth-child(3)
                        text-align right
                        flex 3
                    span 
                        &:nth-child(1)
                            color #4A5C72
                            font-size 3.2vw
                            margin-bottom 2.9vw
                        &:nth-child(2)
                            color #A6ABBF
                            font-size 3.7vw
            .order-footer
                display flex
                align-items center
                justify-content space-between
    .trade-head
        padding 4.7vw 4.3vw
        .m1
            font-size 4vw 
            color #DFE0E7 
            margin-right .5vw
        .m2
            font-size 4vw 
            color #A6ABBF
    .trade-content
        margin 3px
        box-sizing border-box
        border 1px solid #323F4D
        border-radius .8vw
        background #1E2834
        padding 5.3vw 4.7vw
    .info-title
        display flex
        align-items center
        background #222D3A
        border-radius .5vw
        color #A6ABBF
        font-size 4vw
        height 9.6vw
        padding 0 2.9vw
        margin-bottom 2px
        margin-top 5vw
    .info-content
        background #1F2A36
        border-radius .5vw
    .info-ul
        list-style none
        padding 2.8vw 2.6vw
        display block
        li
            height 10vw
            display flex
            align-items center
            justify-content space-between
            font-size 3.2vw
    .info-steps
        font-size 3.5vw
        margin 7vw 0 4.5vw
        > div
            display flex
            align-items center
            .icon
                width 4.8vw
                height 4.8vw
                border-radius 50%
                margin-right 2.3vw
                display flex
                align-items center
                justify-content center
                font-size 3.2vw
        .line
            height 2.7vw
            width .3vw
            margin .7vw 2.3vw
    .info-sum
        padding 4vw 0
        display flex
        align-items center
        justify-content flex-end
        .info-small
            color #A6ABBF
            font-size 3.5vw
            width 48vw
            display flex
            align-items center
            justify-content space-between
    .info-btn
        display flex
        align-items center
        justify-content flex-end
        color #238FF4
        font-size 3.5vw
        .cancel
            display inline-flex
            align-items center
            justify-content center
            margin-left 5.3vw
            width 48vw
            height 7.5vw
            border-radius .5vw
            color #A6ABBF
            border 1px solid #A6ABBF
        .btn
            display inline-flex
            align-items center
            justify-content center
            margin-left 5.3vw
            width 48vw
            height 7.5vw
            border-radius .5vw
            color #fff
            background #238FF4
    .info-pays
        .check
            img:nth-child(1)
                width 4vw
                margin-right 4vw
        .pay
            a
                display flex
                align-items center
                img 
                    width 5.5vw   
                    margin-right 5.4vw
            div
                flex 1  
                display flex
                align-items center
                color #A6ABBF
                font-size 3.5vw
                span 
                    display inline-flex
                    align-items center
                    margin-right 3vw
                    img 
                        height 3.7vw
    .info-publish
        .publish-title
            display flex
            align-items center
            justify-content space-between
            padding 2vw 0 0
            h5
                color #DFE0E7
                font-size 3.7vw
            .tab
                display flex
                align-items center
                span
                    display block
                    height 4vw
                    width 1px
                    background #48527C
                    margin 0 4vw
                a
                    text-align center
                    font-size 3.7vw
                    color #52647A
                    ainmate
                    &.active
                        color #DFE0E7
        .group
            padding 3.7vw 2.8vw
            display flex
            align-items center
            justify-content space-between
            label
                color #A6ABBF
                font-size 3.2vw
            .item .pay
                display flex
                align-items center
                a
                    margin-left 4vw
                    display flex
                    align-items center
                    img 
                        height 3.7vw
                        &:last-child
                            height 3.9vw
                            margin-left 3vw
        .assist
            color #52647A
            font-size 3.2vw
            padding-right 3.9vw
        .explain
            color #A6ABBF
            font-size 3.2vw
        .boundry
            list-style none
            display flex
            align-items center
            padding 0 2.9vw 0 6vw
            li
                flex 1
                display flex
                flex-direction column
                label
                    color #A6ABBF
                    font-size .12rem
                    margin-bottom .08rem
                > span 
                    color #52647A
                    font-size .12rem
                    margin-top .04rem
        .times-content
            display flex
            flex-direction column
            align-items flex-end
            .times
                list-style none
                display flex
                align-items center
                padding-bottom .1rem
                li
                    width 1.2rem
                a img 
                    height .16rem
            .add
                border 1px solid #323F4D
                border-radius .04rem
                display flex
                align-items center
                justify-content center
                color #A6ABBF
                font-size .14rem
                width 1.2rem
                height .24rem
        .groups
            padding 4vw 0
            label
                color #A6ABBF
            .group
                padding 1vw 0
    .info-place
        padding 4.1vw
        font-size 3.2vw
        color #A6ABBF
        .info-lists
            list-style none
            li
                display flex
                align-items center
                justify-content space-between
                min-height 12vw
                label 
                    font-weight 400
    .info-confirm-pays
        list-style none
        display flex
        align-items center
        li
            display flex
            align-items center
            cursor pointer
            img 
                height 4.3vw
                margin-left 8vw
                &:last-child
                    height 4.3vw
                    margin-left 2.7vw
    .info-message
        padding 4vw 3.7vw
        background #1E2834
        margin 2px
        border-radius 3px
        border 1px solid #323F4D

.h5-tab
    a
        color #4A5C71
        font-size 4vw
        display inline-block
        height .44rem
        line-height .44rem
        margin 0 6vw
        position relative
