.f-center
    display flex
    align-items center

// 可选币种列表
.otctop
    padding 0
    flexCenter(space-between)
    .types
        display flex
        align-items center
        a
            display flex
            align-items center
            justify-content center
            width 1.24rem
            height .34rem
            border 1px solid #323F4D
            margin-right .3rem
            border-radius .04rem
            color #DFE0E7
            cursor pointer
    .other
        a 
            color #7396DE
            transition all .5s linear
            &:hover 
                color #1890ff

// head
.head
    padding .2rem 0

// 交易列表
.hide-expand
    border 1px solid #323F4D
    margin 0 -.19rem
    padding .2rem .3rem
    border-radius .06rem
    background #1E2834
    overflow -webkit-paged-x
    .bottom-line
        padding-bottom .3rem
        border-bottom 1px solid rgba(72, 82, 124, .1)
        margin-bottom 2px
    .coins 
        display flex
        justify-content space-between
        border-bottom 1px solid rgba(72, 82, 124, .1)
        margin-bottom .1rem
        ul 
            list-style none
            display flex
            align-items center
            li 
                margin-right .3rem
                padding-bottom .1rem
                position relative
                a 
                    color #52647A
                    font-size .16rem
                &.active 
                    a 
                        color #DFE0E7
                    &:after
                        position absolute
                        bottom 0
                        display block
                        content ''
                        background #FFAC59
                        width 100%
                        height .02rem
                        border-radius .02rem .02rem 0 0
        .extra
            color #A6ABBF
            b 
                color #DFE0E7
            a 
                color #7396DE
                text-decoration none
                cursor pointer
                transition all .5s linear
                &:hover 
                    color #1890ff

// 表格
.otc-table
    width 100%
    thead
        th 
            color #52647A
            font-size .14rem  
            padding .1rem 0
            &:first-child
                padding-left .3rem
            &:last-child
                padding-right .3rem
                text-align right
    tbody
        tr
            transition all .5s linear
            &:hover
                background #212C39
                cursor pointer
            td
                color #52647A
                font-size .14rem
                &:first-child
                    padding-left .3rem
                &:last-child
                    padding-right .3rem
                    span
                        justify-content flex-end
                span
                    display flex
                    align-items center
                    height .42rem
    .filter
        color #52647A
        font-size .14rem
        display flex
        align-items center
        &:hover
            color #52647A
        img 
            width .07rem
            margin-left .07rem

// 阴影盒子
.box
    padding .15rem
    border-radius .1rem
    box-shadow 0 0 .1rem 0 rgba(166,183,227,0.3);
    margin-bottom .15rem

// 标题
.caption
    flexCenter(space-between)
    padding-left .08rem
    font-size .16rem
    font-weight 600
    color color-deep
    &.blue
        border-left 4px solid #819af3
    &.yellow
        border-left 4px solid #fdb59a
    &.origin
        border-left 4px solid #fb9595
    &.pink
        border-left 4px solid #d2aefb
    .extra
        display flex
        align-items center
        font-size .14rem
        color color-light
        b
            color color-deep
        .operation
            color #3b57dc
            padding-left .1rem
            text-decoration underline

// 交易按钮
.trade-btn
    color #238FF4
    display inline-block
    border 1px solid #238FF4
    width .6rem
    height .24rem
    line-height .24rem
    text-align center
    word-spacing .8px
    font-size .14rem
    border-radius .04rem
    transition all .5s linear

// 下单提示
.place-notice
    color #A6ABBF 
    font-size .14rem
    display flex
    align-items center
    margin-bottom 0.25rem
    img 
        width .17rem
        margin-left .1rem
.place-detail
    background #324151
    padding .15rem 
    color #A6ABBF 
    font-size .14rem
    line-height .22rem
    width 2rem

// 分页
.page
    padding .2rem .3rem
    display flex
    justify-content flex-end
    .ant-pagination-options
        padding-left .1rem
    .ant-pagination-item-active
        border 1px solid rgba(153, 172, 211, .2) !important
    .ant-pagination
        color #A6ABBF
    .ant-select-selection
        background #18222c
        height .24rem
        line-height .24rem
        border 1px solid rgba(153, 172, 211, .2) !important
    .ant-select-selection--single
        height .24rem
    .ant-select-selection__rendered
        // line-height .24rem
    .ant-select-selection-selected-value
        color #A6ABBF
    .ant-pagination-options-quick-jumper
        height .24rem
        line-height .24rem
        input 
            background transparent !important
            border 1px solid rgba(153, 172, 211, .2) !important
            color #A6ABBF
            height .24rem !important
            line-height .24rem !important

// 币种描述
.descdata
    padding .1rem
    label 
        display block
        padding .05rem 0
        font-weight 700
        font-size .18rem
        color color-deep
    .price
        font-size .18rem
        font-weight 700
    .ul
        display flex
        flex-direction column
        > span 
            padding .08rem .1rem
            display flex
            align-items center
            span:first-child
                display list-item
                color color-deep
                flex-basis .55rem
                font-weight 500
            span:last-child
                color color-light
                &.red
                    color #ff546c
                &.green
                    color #48d299

// 分时图
.descchart
    flexCenter(space-between)
    .tab
        width 40%
        background #f4f8ff
        padding 0.04rem .4rem
        margin .05rem 0.8rem 0
        display flex
        justify-content: space-between
        a
            color color-light
            padding 0 .1rem
            font-size: .13rem
            transition: all .3s ease-in-out
            &.active
                background #8ea0f5
                color #fff

// 弹出层发布订单
.toastform
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background rgba(0, 0, 0, 0.2)
    display flex
    justify-content flex-end
    z-index 101

.expand-trade
    display flex
    flex-direction column
    justify-content flex-end
    padding .1rem
    .inputs
        display flex
        align-items center
        justify-content flex-end
        > span 
            color font-light
            font-size .12rem
            margin-right .1rem
        img 
            height .12rem
            margin 0 .1rem
        .ant-input-number
            border 0
            outline none
            box-shadow 0 0 0.1rem 0 red
            color color-light
            line-height .24rem
            font-size .13rem
            &::placeholder
                color #c5d0e7
                font-size .12rem
            .ant-input-number-input
                font-size .12rem
                &::placeholder
                    color #c5d0e7
                    font-size .12rem
            .ant-input-number-handler-wrap
                border-left 1px solid #d7deef
            .ant-input-number-handler-up
                border-bottom 1px solid #d7deef
            .ant-input-number-handler-down
                border-top 1px solid #d7deef
    .btns
        padding .2rem 0 0
        button 
            height .24rem
    

.filters
    display flex
    flex-direction column
    a
        font-weight 400
        text-align center
        color #18397c
        font-size .13rem
        &:not(:first-child):not(:last-child)
            margin: .02rem 0
        &.active
            color #3b57dc
        &:hover
            // font-weight bolder
            color #3b57dc
    &.multiple
        a
            display block
            padding 0 .2rem
            &.active
                border 1px solid #bac6ff
                border-radius 5px
                color #3b57dc
            &:hover
                font-weight 400
                color #3b57dc

.payway
    display flex
    align-items center
    img 
        width .22rem
        margin-right .2rem

.divider
    margin .1rem 0 0
    background #fafafe

.chat
    list-style none
    padding .1rem 1rem
    li
        padding .1rem 0
        display flex
        align-items center
        p
            padding-top .1rem
            span
                position absolute
                padding-left .25rem
                font-size .13rem
                line-height .42rem
                color #99acd3
            img
                height .5rem

.otc-title
    color #DFE0E7
    font-size .16rem
    span
        margin-right .05rem
.otc-info
    color #A6ABBF
    font-size .14rem
    span
        margin-right .05rem

.group-flex 
    background #1F2A36
    border-radius .04rem
    height calc(100% - 0.48rem - 2px)

.steps
    display flex
    align-items center
    padding .3rem 0 .2rem
    > div
        display flex
        align-items center
        .icon
            display flex
            align-items center
            justify-content center
            width .32rem
            height .32rem
            border-radius 50%
            margin-right .11rem
        .text
            margin-right .11rem
            font-size .14rem
        &.line
            width 1.3rem 
            height .02rem
            margin-right .11rem

// 下单
.place
    display flex
    align-items flex-end 
    justify-content space-between 
    padding .1rem 0 .2rem .1rem
    .items
        display flex
        align-items center
        label 
            width 1.4rem
            color #A6ABBF
            font-size .14rem

.confirm-modal
    h5 
        color #A6ABBF
        font-size .16rem
    .item
        padding  .1rem .5rem 0
        p 
            margin-top .14rem
            color #A6ABBF
            font-size .18rem

.table-filter
    list-style none
    background #324151
    margin-top -.1rem
    padding .05rem 0
    li
        padding 0 .16rem
        height .3rem
        display flex
        align-items center
        cursor pointer
        transition all .5s linear
        a
            color #A6ABBF
            font-size .14rem
        &.active, &:hover
            background #2E3D4C
            a
                color #fff
        

// 全局样式
::-webkit-scrollbar
    display none

.ant-popover-inner-content
    padding 0
.ant-popover-arrow
    display none

// 重写 antd 样式
.ant-table-thead > tr > th
    background transparent
    padding .1rem 0
    border-bottom 0
    color color-font-third 
    font-size .13rem
    a 
        color color-font-third !important
    i 
        color color-font-third
    
.ant-pagination-item-link, .ant-pagination-item
    background transparent !important
    border 1px solid color-border-dark
    border-radius 4px !important
    color color-font-second !important
    a 
        color color-font-second

.ant-pagination-item-link
    border 0 !important
    .ant-pagination-item-ellipsis
        color #a6abbf !important

.ant-select-dropdown
    background #324151

.ant-pagination-item-active
    color color-font-first !important
    border 1px solid color-font-first !important

.ant-pagination-item-active >a
    color color-font-first !important

.ant-table-tbody > tr:hover:not(.ant-table-expanded-row) > td
    background transparent
    
.ant-table-tbody > tr > td.ant-table-column-sort
    background transparent
.ant-table-tbody > tr > td.ant-table-column-sort:hover
    background transparent
.ant-table-thead > tr.ant-table-row-hover > td, .ant-table-tbody > tr.ant-table-row-hover > td, .ant-table-thead > tr:hover > td, .ant-table-tbody > tr:hover > td
    background transparent

.ant-table-tbody > tr > td
    padding .1rem 0
    border-bottom 0
    color color-font-second
    font-size .13rem

.ant-table-placeholder
    background: transparent
    border-top: 0;
    color color-light
    padding .2rem 0 .1rem
    border-bottom 0

.ant-table-thead > tr > th.ant-table-column-sort
    background-color transparent

.table-small 
    .ant-table-thead > tr > th
        padding .1rem 0 .05rem
    .ant-table-tbody > tr > td
        padding .05rem 0