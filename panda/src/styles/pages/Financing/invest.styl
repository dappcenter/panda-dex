.finance-invest
  display flex
  justify-content space-between
  flex 1
  align-items center
  padding 0 0.3rem 0.3rem 0.3rem
  > div
    display flex
    align-items center
    margin 0.15rem
    margin-top 0.2rem
    //width 2rem
    .title
      border-radius 0.06rem
      flex-direction column
      width 2rem
      &.label1
        background-color #FBD59A
        padding 0.1rem
      &.label2
        background-color #9DB1F8
        padding 0.2rem
        padding-right  0.1rem
        padding-left  0.1rem
      > div
        color #FFFFFF
        padding 0.1rem
        padding-top 0
        &:nth-child(1)
          font-size .12rem
        &:nth-child(2)
          font-size .20rem
        &:nth-child(3)
          padding-top 0
          padding-bottom 0
          .upordown
            font-size .12rem
            margin-right 0.1rem
            &.normol
              color width 
            &.up
              color green
            &.down
              color #FF546C
          .label
            font-size .12rem
    .title2
      margin-left 0.3rem
      > div
        align-items center
        .label
          display flex
          align-items center
          > div
            &:nth-child(1)
              background-color #18397C
              width 0.06rem
              height 0.06rem
              border-radius 0.03rem
              margin-right 0.1rem
            &:nth-child(2)
              color #18397C
              font-size 0.15rem
        .bottom
          margin-left 0.18rem
          color #9DB1F8
          font-size 0.18rem

