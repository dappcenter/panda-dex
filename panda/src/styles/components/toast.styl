.toast-notice-wrapper
    .notice
        &-enter 
            opacity 0.01
            transform scale(0)
        &-enter-active 
            opacity 1
            transform scale(1)
            transition all 300ms ease-out
        &-exit 
            opacity 1
            transform translateY(0)
        &-exit-active 
            opacity 0.01
            transform translateY(-40%)
            transition all 300ms ease-out

.notice 
    position fixed 
    left: 50%
    transform translateX(-50%)
    top: 40%
    text-align center
    z-index 2000
    background-color rgba(8,17,45,0.7)
    min-width 4rem
    height 2.2rem
    border-radius .2rem
    // opacity 0.7
    display flex 
    flex-direction column 
    justify-content center 
    align-items center
    img 
        height 0.6rem
        width auto
    p 
        color #fff
        font-size .20rem
        margin .2rem 0
        padding 0 .1rem

.toast-notification
    z-index 1999

.overlay 
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh
    z-index 1998
    background-color transparent

@media (max-width: 900px)
    .notice 
        min-width 2rem
        height 1.1rem
        background: rgba(23,32,43,0.7);
        border-radius: 5px;
        img 
            height 0.26rem;
            margin-top: .25rem;
        p 
            font-size .14rem;