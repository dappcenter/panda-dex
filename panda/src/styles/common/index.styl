.width-800
    width 8rem

.click-primary 
    _color = color-primary
    color _color 
    cursor pointer
    &:hover 
        color lighten(_color, 30%)

.click-light
    _color = color-primary
    color _color
    cursor pointer
    svg 
        fill _color
    &:hover 
        color lighten(_color, 30%)
        svg 
            fill lighten(_color, 30%)
